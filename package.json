{
  "name": "playwright-bdd-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --require-module ts-node/register  --require 'Hooks/hooks.ts' --require 'step-definitions/**/*.ts' 'features/**/*.feature'",
    "test:ui": "cucumber-js allure-cucumberjs/reporter:./allure-results --tags \"@UI\" --require-module ts-node/register  --require 'Hooks/hooks.ts' --require 'step-definitions/**/*.ts' 'features/**/*.feature'",
    "test:api": "cucumber-js --tags \"@API\" --require-module ts-node/register --require 'step-definitions/**/*.ts' 'features/**/*.feature'",
    "test:all": "cucumber-js --tags \"@UI or @API\" --require-module ts-node/register --require 'step-definitions/**/*.ts' 'features/**/*.feature'",
    "allure:generate": "allure generate ./allure-results --clean -o ./test-results/allure-report",
    "allure:open": "allure open ./test-results/allure-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.2",
    "ajv": "^8.17.1",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.4.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
